[pager]
	branch = false
	log = true

[includeIf "gitdir:~/baringa/"]
        path = ~/baringa/.gitconfig

[init]
	defaultBranch = main
[help]
	autocorrect = prompt

[push]
	autoSetupRemote = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	frag = magenta bold
	meta = yellow bold
	new = green bold
	old = red bold
	whitespace = red reverse
[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[fetch]
	prune = true
